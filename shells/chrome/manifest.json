{
  "manifest_version": 2,
  "name": "Auto Cat",

  "icons": {
    "16": "icons/16.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },

  "description": "This extension demonstrates a browser action with kittens.",
  "version": "1.0",
  "permissions": [
    "http://*/*",
    "https://*/*",
    "file://*",
    "activeTab"
  ],
  "browser_action": {
      "default_icon": {
        "16": "icons/16.png",
        "48": "icons/48.png",
        "128": "icons/128.png"
      },
      "default_popup": "popups/default.html"
  },
  "content_security_policy": "script-src 'self' 'unsafe-eval'; object-src 'self'",
  "devtools_page": "devtools-background.html",
  "background": {
    "scripts": [ "build/background.js" ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["build/hook.js"],
      "run_at": "document_start"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["build/detector.js"],
      "run_at": "document_idle"
    }
  ]
}
